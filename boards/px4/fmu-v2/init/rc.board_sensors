#!/bin/sh
#
# PX4 FMUv2 specific board sensors init
#------------------------------------------------------------------------------

rgbled start -I

adc start

# External I2C bus
hmc5883 -T -X start
lis3mdl -X start
ist8310 -X start
qmc5883 -X start
rm3100 -X start

# Internal I2C bus
hmc5883 -T -I -R 4 start

# Internal SPI (auto detect ms5611 or ms5607)
if ! ms5611 -T 5607 -s -b 1 start
then
	ms5611 -s -b 1 start
fi

mpu6000 -s -b 1 -R 14 start
l3gd20 -s -b 1 start
lsm303d -s -b 1 start
